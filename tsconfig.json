{
  "extends": "@vue/tsconfig",
  "include": [
    "./src/*"
  ],
  "compilerOptions": {
    "lib": ["dom"],
    "rootDir": "./",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "node"
    ],
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false
  }
}
